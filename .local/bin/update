#!/usr/bin/bash
printf "\n=============================\n%s\n%s\n" \
         " Updating Official Packages" \
         "============================="
sudo /usr/bin/pacman -Syu

printf "\n=============================\n%s\n%s\n" \
         "    Updating AUR Packages" \
         "============================="
paru -Sau

printf "=============================\n%s\n%s\n" \
       "     Updating Flatpaks" \
       "============================="
flatpak update

printf "=============================\n%s\n%s\n" \
       "     Updating Pipx Packages" \
       "============================="
pipx upgrade-all

touch /var/lib/pacman/local/arch-update
printf "\nDone - Press any key to exit."
read
