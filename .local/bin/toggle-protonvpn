#!/usr/bin/bash

if [[ $(pgrep --exact openvpn) ]]; then
	protonvpn-cli d
	[[ $(pgrep --exact qbittorrent) ]] && notify-send "ProtonVPN" "You Can Resume Torrents Now" -a "ProtonVPN"
else
	if [[ $(pgrep --exact qbittorrent) ]]; then
		reply=$(notify-send "ProtonVPN" "Make Sure Torrents Are Inactive" -e -a "ProtonVPN" -A "Quit" -A "Continue")
		[[ $reply = "1" ]] && protonvpn-cli c -f
	else
		protonvpn-cli c -f
	fi
fi
